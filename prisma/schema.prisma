datasource db {
  provider = "mongodb"
  url      = env("MONGO_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

model guildConfig {
  id     String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  prefix String @default("?")
}

model voiceRanking {
  id       String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  guildId  String @unique
  userId   String @unique
  time     Int    @default(0)
  lifeTime Int    @default(0)
  level    Int    @default(1)
}

model voiceTimerSchema {
  id        String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  guildId   String @unique
  userId    String @unique
  startTime Int
}

model warningSchema {
  id       String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  guildId  String @unique
  userId   String @unique
  warnings Json[]
}
